{
  "name": "camera-pip",
  "version": "1.0.0",
  "description": "Simple webcam PiP application for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "package": "electron-packager . Camera-PiP --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "keywords": [
    "electron",
    "webcam",
    "pip",
    "windows"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-builder-squirrel-windows": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.camerapip.app",
    "productName": "Camera PiP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/electron-window-state/**/*"
    ],
    "win": {
      "target": "portable",
      "sign": false
    },
    "portable": {
      "artifactName": "Camera-PiP-Portable.exe"
    }
  }
}